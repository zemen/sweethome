{
  "languageserver": {
    "efm": {
      "command": "efm-langserver",
      "args": [],
      "filetypes": [
        "vim",
        "eruby",
        "markdown",
        "yaml"
      ]
    }
  },
  "clangd.arguments": [
    "--clang-tidy",
    "--background-index",
    "--header-insertion=never"
  ],
  "clangd.disableSnippetCompletion": true,
  "coc.preferences.jumpCommand": "tab drop",
  "coc.preferences.formatOnSave": true,
  "python.formatting.provider": "black"
}
